@model Naanayam.Web.Models.Login

<br />
<br />
@using (Html.BeginForm("Index", "Login", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <table width="100%">
        <tr>
            <td width="35%">&nbsp;</td>
            <td width="30%">
                <div class="panel panel-default">
                    <div class="panel-heading" style="text-align:center">
                        <h3 class="panel-title"><b>Login</b></h3>
                    </div>
                    <div class="panel-body">
                        <table width="100%">
                            <tr>
                                <td>
                                    @Html.TextBoxFor(i => i.Username, new { @class = "form-control", placeholder = "Username" })
                                    @Html.ValidationMessageFor(i => i.Username, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr><td>&nbsp;</td></tr>
                            <tr>
                                <td>
                                    @Html.PasswordFor(i => i.Password, new { @class = "form-control", placeholder = "Password" })
                                    @Html.ValidationMessageFor(i => i.Password, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr><td>&nbsp;</td></tr>
                            <tr>
                                <td>
                                    <small>
                                        Don't have an account? Register @Html.ActionLink("here", "Index", "Registration").
                                    </small>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align:center">
                                    <small>
                                        @Html.ValidationMessage("Authentication", new { @class = "text-danger" })
                                    </small>
                                </td>
                            </tr>
                            <tr><td>&nbsp;</td></tr>
                            <tr>
                                <td style="text-align:center">
                                    <input type="submit" value="Login" class="btn btn-primary" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </td>
            <td width="35%">&nbsp;</td>
        </tr>
    </table>
}
<br />
<br />