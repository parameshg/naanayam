@model Naanayam.Web.Models.Registration

<br />
<br />
@using (Html.BeginForm("Index", "Registration", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table width="100%">
        <tr>
            <td width="35%">&nbsp;</td>
            <td width="30%">
                <div class="panel panel-default">
                    <div class="panel-heading" style="text-align:center">
                        <h3 class="panel-title"><b>Registration</b></h3>
                    </div>
                    <div class="panel-body">
                        <table width="100%">
                            <tr>
                                <td>
                                    @Html.TextBoxFor(i => i.FirstName, new { @class = "form-control", placeholder = "First Name" })
                                    @Html.ValidationMessageFor(i => i.FirstName, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr><td>&nbsp;</td></tr>
                            <tr>
                                <td>
                                    @Html.TextBoxFor(i => i.LastName, new { @class = "form-control", placeholder = "Last Name" })
                                    @Html.ValidationMessageFor(i => i.LastName, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr><td>&nbsp;</td></tr>
                            <tr>
                                <td>
                                    @Html.TextBoxFor(i => i.Username, new { @class = "form-control", placeholder = "Username" })
                                    @Html.ValidationMessageFor(i => i.Username, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr><td>&nbsp;</td></tr>
                            <tr>
                                <td>
                                    @Html.TextBoxFor(i => i.Email, new { @class = "form-control", placeholder = "Email" })
                                    @Html.ValidationMessageFor(i => i.Email, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr><td>&nbsp;</td></tr>
                            <tr>
                                <td>
                                    @Html.PasswordFor(i => i.Password, new { @class = "form-control", placeholder = "Password" })
                                    @Html.ValidationMessageFor(i => i.Password, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr><td>&nbsp;</td></tr>
                            <tr>
                                <td>
                                    @Html.PasswordFor(i => i.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                                    @Html.ValidationMessageFor(i => i.ConfirmPassword, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr><td>&nbsp;</td></tr>
                            <tr>
                                <td style="text-align:center">
                                    <input type="submit" value="Signup" class="btn btn-primary" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </td>
            <td width="35%">&nbsp;</td>
        </tr>
    </table>
}
<br />
<br />